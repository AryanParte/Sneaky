{
  "name": "cluely",
  "version": "0.1.0",
  "description": "A discreet AI-powered desktop assistant for real-time help during interviews, meetings, or calls",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "concurrently \"npm run start\" \"cross-env BROWSER=none PORT=3002 npm run react-start\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-rebuild": "electron-rebuild -f -w robotjs",
    "postinstall": "npm run electron-rebuild",
    "build": "npm run react-build && electron-builder",
    "package": "electron-builder build --mac --win --publish never"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.6.2",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.2",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "node-fetch": "^2.7.0",
    "node-tesseract-ocr": "^2.2.1",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.0",
    "react-scripts": "5.0.1",
    "recordrtc": "^5.6.2",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.1",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.cluely.app",
    "productName": "Cluely",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
